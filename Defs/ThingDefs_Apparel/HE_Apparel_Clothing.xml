<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>HE_Apparel_Robe</defName>
    <label>High Elven Robe</label>
    <description>High Elven robes are remarkably light, comfortable, and versatile.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/Clothing/HE_Robe/HE_Robe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <color>(255, 255, 255)</color>
    </graphicData>
    <costList>
		<Cloth>80</Cloth>
    </costList>
	<thingCategories>
      <li>Apparel</li>
    </thingCategories>
		<statBases>
		<WorkToMake>900</WorkToMake>
		<MaxHitPoints>400</MaxHitPoints>
		<Mass>2</Mass>
		<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <MoveSpeed>0.08</MoveSpeed>
	  <MeleeHitChance>0.05</MeleeHitChance>
	  <MeleeDodgeChance>0.05</MeleeDodgeChance>
    </equippedStatOffsets>	
    <recipeMaker>
      <recipeUsers>
        <li>HighElves_Smithery</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
		<apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
		<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Clothing/HE_Robe/HE_Robe</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
		<li>HE_Clothing_Basic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

